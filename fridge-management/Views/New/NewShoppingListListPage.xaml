<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="fridge_management.Views.NewShoppingListListPage"
             xmlns:vm="clr-namespace:fridge_management.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:NewShoppingListListViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        
        <StackLayout Orientation="Vertical">
            <Label Text="Produktname:" Margin="10,5,0,0"/>
            <Entry Text="{Binding curItem.Text}" Placeholder="Einkaufsliste hinzufügen" Margin="10,0"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
            </Grid>
            <Button Text="Speichern" Command="{Binding AddCommand}" Margin="10,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>