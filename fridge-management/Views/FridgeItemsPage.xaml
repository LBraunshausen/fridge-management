<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fridge_management.Views.FridgeItemsPage"
             xmlns:vm="clr-namespace:fridge_management.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:FridgeItemsViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+" Command="{Binding AddCommand}" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ListView VerticalOptions="FillAndExpand" ItemsSource="{Binding FridgeItem}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Label Text="{Binding Text}"/>
                    <Label />
                    <Button />
                </StackLayout>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>
