<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="fridge_management.Views.NewFridgeItemPage"
             xmlns:vm="clr-namespace:fridge_management.ViewModels"                       
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:NewFridgeItemViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Produktname:" Margin="10,5,0,0"/>
            <Entry Placeholder="Produktnamen hinzufügen" Margin="10,0"/>
            <Label Text="Mindesthaltbarkeitsdatum:" Margin="10,0"/>
            <DatePicker Margin="10,5,0,0" />
            <Button Text="Hinzufügen" Margin="10,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>